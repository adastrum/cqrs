@model AuctionListViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <h2>Auctions</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Seller</th>
                <th>Lot name</th>
                <th>Closes</th>
                <th>Current amount</th>
                <th>Bids</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model.Auctions)
            {
                <tr>
                    <td>@auction.Seller.Name</td>
                    <td>@auction.Lot.Name</td>
                    <td>@auction.Closes.ToShortDateString()</td>
                    <td>@auction.CurrentAmount?.Amount @auction.CurrentAmount?.CurrencyCode</td>
                    <td>@auction.Bids</td>
                </tr>
            }
        </tbody>
    </table>
</div>